{
  "name": "php-mysql",
  "version": "1.0.0",
  "private": true,
  "description": "A simple PHP application with MySQL database integration",
  "scripts": {
    "build": "tailwindcss -i ./resources/css/globals.css -o ./public/css/globals.css",
    "dev": "concurrently \"bun dev:tailwind\" \"bun dev:app\"",
    "dev:app": "php -S localhost:3000 -t public",
    "dev:tailwind": "tailwindcss -i ./resources/css/globals.css -o ./public/css/globals.css --watch",
    "start": "php -S localhost:3000 -t public"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "concurrently": "^9.2.0",
    "tailwindcss": "^4.1.11"
  }
}
